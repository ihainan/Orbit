# =============================================
# For local development only (npm run dev)
# Not used when running inside Docker — docker-compose.yml sets these directly.
# =============================================

# Database — connects to the PG container exposed on the host
# DB_PASSWORD must match the DB_PASSWORD set in the root .env
DB_HOST=localhost
DB_PORT=51000
DB_USER=orbitals
DB_PASSWORD=your_password_here
DB_NAME=orbitals_db

# Server
PORT=51001
NODE_ENV=development

# Upload
UPLOAD_DIR=../docker/dev/data/uploads
MAX_FILE_SIZE=52428800

# Default user — created automatically on first run if no user exists in the database
DEFAULT_USERNAME=your_username_here
DEFAULT_EMAIL=your_email_here

# AMap (高德地图) API Configuration
# Obtain from: https://console.amap.com/
AMAP_WEB_SERVICE_KEY=your_amap_api_key_here
